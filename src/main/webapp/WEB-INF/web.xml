<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <!-- Here we're defining list of application servlets -->
    <servlet>
        <servlet-name>scaleservlet</servlet-name>
        <servlet-class>com.servlet.ScaleServlet</servlet-class>

    </servlet>



    <!-- Here we're defining URL mapping to each previously defined servlets -->


    <servlet-mapping>
        <servlet-name>scaleservlet</servlet-name>
        <url-pattern>/image/scale/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>



    <servlet>
        <servlet-name>compressservlet</servlet-name>
        <servlet-class> com.servlet.ServletCompress</servlet-class>

    </servlet>



    <!-- Here we're defining URL mapping to each previously defined servlets -->


    <servlet-mapping>
        <servlet-name>compressservlet</servlet-name>
        <url-pattern>/compress/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>



</web-app>